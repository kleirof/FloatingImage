<Window x:Class="FloatingImage.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设置" Height="200" Width="300"  Icon="pack://application:,,,/Resources/icon.ico"
        PreviewKeyDown="SettingsWindow_PreviewKeyDown"
        PreviewKeyUp="SettingsWindow_PreviewKeyUp">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
        <Label Content="输入切换编辑模式的快捷键：" />
        <TextBox x:Name="HotkeyTextBox" Width="200" Margin="0,10" IsReadOnly="True" HorizontalContentAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="OK" Width="80" Margin="10" Click="OKButton_Click" />
            <Button Content="Cancel" Width="80" Margin="10" Click="CancelButton_Click" />
        </StackPanel>
    </StackPanel>
</Window>
